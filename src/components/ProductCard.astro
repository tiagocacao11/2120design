---
const { p } = Astro.props;
---
<article class="card" style="padding:0; overflow:hidden;">
  <div style="aspect-ratio: 4 / 3; background:#fff;">
    <img src={p.imagem} alt={p.nome} style="width:100%; height:100%; object-fit:cover; display:block;" loading="lazy" />
  </div>
  <div style="padding:14px 14px 16px 14px;">
    <h3 style="margin:0 0 6px 0; font-size:18px;">{p.nome}</h3>
    <p class="muted" style="margin:0 0 10px 0; font-size:14px;">{p.descricao}</p>
    <p style="margin:0 0 12px 0;"><small class="muted">{p.precoNota}</small></p>

    <div style="display:flex; gap:10px; flex-wrap:wrap;">
      <a class="btn primary" href={"/encomendar/?produto=" + encodeURIComponent(p.nome)}>Pedir</a>
      <a class="btn" href="/produtos/">Ver produtos</a>
    </div>
  </div>
</article>
